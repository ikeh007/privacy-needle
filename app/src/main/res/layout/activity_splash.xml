<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp">

    <!-- Centered Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:contentDescription="Privacy Needle Logo"
        android:scaleType="centerInside"
        android:src="@drawable/pneedle_app" />



    <!-- Developer Text (Just Above Product Line) -->
    <TextView
        android:id="@+id/developer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Developed by: Ikeh James â€“ CDPO | Privacy Needle"
        android:textColor="#F7D1D1D1"
        android:textSize="7sp"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

</RelativeLayout>

